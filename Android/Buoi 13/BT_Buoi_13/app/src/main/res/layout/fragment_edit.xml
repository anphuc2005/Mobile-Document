<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentAdd">

    <LinearLayout
        android:id="@+id/edit_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color"
        android:orientation="horizontal"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/back_svgrepo_com" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Task"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="25dp"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/title_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_bar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:hint="Title"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/detail_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_field"
        android:layout_marginTop="20dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:hint="Detail"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_field"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/update_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight= "0.5"
            app:layout_constraintTop_toBottomOf="@id/detail_field"
            android:layout_marginTop="60dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:text="Update"
            android:textSize="15dp"
            android:padding="15dp"
            android:background="@drawable/radius"
            />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:layout_constraintTop_toBottomOf="@id/detail_field"
            android:layout_marginTop="60dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:text="Cancel"
            android:textSize="15dp"
            android:padding="15dp"
            android:background="@drawable/radius"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>