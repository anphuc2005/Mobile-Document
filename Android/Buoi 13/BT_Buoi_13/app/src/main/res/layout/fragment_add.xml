<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentAdd">

    <LinearLayout
        android:id="@+id/add_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color"
        android:orientation="horizontal"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/back_svgrepo_com"
            android:backgroundTint="@android:color/transparent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Task"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="25dp"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/title_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_bar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:hint="Title"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/detail_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_field"
        android:layout_marginTop="20dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:hint="Detail"/>

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_field"
        android:layout_marginTop="60dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:text="ADD"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="15dp"
        android:background="@drawable/radius"
        />


</androidx.constraintlayout.widget.ConstraintLayout>